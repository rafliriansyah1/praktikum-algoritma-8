angka1 = int(input("masukan angka : "))
angka2 = int(input("masukan pangkatnya : "))
def pangkat(angka1,angka2):
 
    if angka2 >= 1:
        return angka1 * pangkat(angka1, angka2 - 1)

    return angka1
hasil = pangkat(angka1, angka2)

print(f"hasil nya adalah = {hasil}")
    
